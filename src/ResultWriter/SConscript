# @section DESCRIPTION
# Definition of the result writer source files.

Import('env')

# result writer source files
try:
    env['HDF5']
    writerFiles = ['analyse_seissol.f90',
                   'data_output.f90',
                   'inioutput_seissol.f90',
                   'common_receiver.f90',
                   'receiver_hdf.f90',
                   'receiver.f90',
                   'plot_fields.f90',
                   'printthistimestep.f90',
                   'output_rupturefront.f90',
                   'magnitude_output.f90',
                   'hdf_output_utils.f90',
                   'hdf_faultoutput.f90',
                   'common_fault_receiver.f90',
                   'faultoutput.f90',
                   'ini_faultoutput.f90' ]

except KeyError:
    writerFiles = [ 'analyse_seissol.f90',
                    'inioutput_seissol.f90',
                    'data_output.f90',
                    'output_rupturefront.f90',
                    'magnitude_output.f90',
                    'common_receiver.f90',
                    'receiver.f90',
                    'plot_fields.f90',
                    'printthistimestep.f90',
                    'common_fault_receiver.f90',
                    'faultoutput.f90',
                    'ini_faultoutput.f90' ]
    
writerFiles += [ 'WaveFieldWriterC.cpp',
                 'WaveFieldWriterF.f90',
                 'FaultWriterC.cpp',
                 'FaultWriterF.f90' ]

for i in writerFiles:
  env.sourceFiles.append(env.Object(i))

Export('env')
